# ============================================================================
# What The Game - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!
#
# Quick Start:
#   1. cp .env.example .env
#   2. Fill in at minimum: DATABASE_URL, STEAM_API_KEY, OPENAI_API_KEY
#   3. rails db:create && rails db:migrate
#   4. rails server
# ============================================================================

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
DATABASE_URL=postgresql://localhost/what_the_game_development

# Production database (use separate database)
# DATABASE_URL=postgresql://user:password@host:5432/what_the_game_production

# Test database (optional, defaults to _test suffix)
# TEST_DATABASE_URL=postgresql://localhost/what_the_game_test

# ----------------------------------------------------------------------------
# Gaming Platform APIs
# ----------------------------------------------------------------------------

## Steam Web API
# Required for Steam library integration
# Get your key: https://steamcommunity.com/dev/apikey
# Free, no OAuth required
STEAM_API_KEY=

## GOG (Good Old Games)
# Required for GOG library integration
# Register: https://devportal.gog.com/
# Uses OAuth 2.0
GOG_CLIENT_ID=
GOG_CLIENT_SECRET=

## Epic Games Store
# Required for Epic Games library integration
# Register: https://dev.epicgames.com/
# Uses OAuth 2.0
EPIC_CLIENT_ID=
EPIC_CLIENT_SECRET=

## Xbox / Microsoft Gaming (Future)
# XBOX_CLIENT_ID=
# XBOX_CLIENT_SECRET=

## PlayStation Network (Future)
# PSN_CLIENT_ID=
# PSN_CLIENT_SECRET=

## Itch.io (Future)
# ITCHIO_API_KEY=

# ----------------------------------------------------------------------------
# AI Service Configuration
# ----------------------------------------------------------------------------
# Choose your preferred AI provider (or configure multiple for fallback)

## OpenAI (GPT-4, GPT-4 Turbo, GPT-3.5)
# Get API key: https://platform.openai.com/api-keys
# Recommended for: Natural language processing, recommendations
OPENAI_API_KEY=
# Optional: Specific model to use (defaults to gpt-4-turbo)
# OPENAI_MODEL=gpt-4-turbo

## Anthropic Claude
# Get API key: https://console.anthropic.com/
# Recommended for: Complex reasoning, analysis
ANTHROPIC_API_KEY=
# Optional: Specific model to use (defaults to claude-3-sonnet)
# ANTHROPIC_MODEL=claude-3-sonnet-20240229

## Local LLM (Future - for privacy-focused users)
# Uses Ollama or similar local models
# OLLAMA_HOST=http://localhost:11434
# OLLAMA_MODEL=llama2

## AI Configuration
# Which provider to use by default: openai, anthropic, local
AI_PROVIDER=openai
# Fallback providers (comma-separated)
AI_FALLBACK_PROVIDERS=anthropic
# Enable AI features (true/false)
AI_ENABLED=true
# AI request timeout (seconds)
AI_TIMEOUT=30

# ----------------------------------------------------------------------------
# Game Data APIs
# ----------------------------------------------------------------------------

## IGDB (Internet Game Database)
# For game metadata, cover art, screenshots
# Register: https://api-docs.igdb.com/
IGDB_CLIENT_ID=
IGDB_CLIENT_SECRET=

## RAWG Video Games Database API
# Alternative game data source
# Get key: https://rawg.io/apidocs
RAWG_API_KEY=

## HowLongToBeat
# For game completion time estimates
# Note: No official API, may use scraping or community alternatives
HLTB_API_KEY=

## IsThereAnyDeal
# For price tracking and deal alerts
# Get key: https://isthereanydeal.com/apps/
ITAD_API_KEY=

# ----------------------------------------------------------------------------
# Storage Configuration
# ----------------------------------------------------------------------------

## Local Storage (Development)
# Default: Uses Rails ActiveStorage with local disk

## Amazon S3 (Production)
# For storing user uploads, game assets, etc.
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=what-the-game-production

## Cloudflare R2 (Alternative to S3)
# R2_ACCOUNT_ID=
# R2_ACCESS_KEY_ID=
# R2_SECRET_ACCESS_KEY=
# R2_BUCKET=what-the-game

# ----------------------------------------------------------------------------
# Cache & Background Jobs
# ----------------------------------------------------------------------------

## Redis Configuration
# Used for caching, sessions, and background jobs
REDIS_URL=redis://localhost:6379/0

# Separate Redis databases (optional)
# REDIS_CACHE_URL=redis://localhost:6379/1
# REDIS_SESSION_URL=redis://localhost:6379/2
# REDIS_QUEUE_URL=redis://localhost:6379/3

# Cache expiration (seconds)
CACHE_EXPIRES_IN=3600

# ----------------------------------------------------------------------------
# Rails Configuration
# ----------------------------------------------------------------------------

# Rails environment: development, test, production
RAILS_ENV=development

# Secret key base (auto-generated via rails credentials)
# Only needed if not using credentials
# SECRET_KEY_BASE=

# Rails server configuration
PORT=3000
HOST=localhost

# Rails serve static files (true in production with no CDN)
RAILS_SERVE_STATIC_FILES=false

# Rails log level: debug, info, warn, error, fatal
RAILS_LOG_LEVEL=info

# ----------------------------------------------------------------------------
# Email Configuration (Future)
# ----------------------------------------------------------------------------

## SMTP Settings
# SMTP_ADDRESS=smtp.example.com
# SMTP_PORT=587
# SMTP_DOMAIN=whatthegame.com
# SMTP_USERNAME=
# SMTP_PASSWORD=
# SMTP_AUTHENTICATION=plain
# SMTP_ENABLE_STARTTLS_AUTO=true

## SendGrid (Alternative)
# SENDGRID_API_KEY=

## From email
# MAIL_FROM=noreply@whatthegame.com

# ----------------------------------------------------------------------------
# Monitoring & Error Tracking
# ----------------------------------------------------------------------------

## Sentry (Error tracking)
# Get DSN: https://sentry.io/
# SENTRY_DSN=

## Datadog (APM)
# DD_API_KEY=
# DD_APP_KEY=

## New Relic
# NEW_RELIC_LICENSE_KEY=

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
# Enable/disable features for gradual rollout or A/B testing

# Enable AI recommendations
FEATURE_AI_RECOMMENDATIONS=true

# Enable price tracking
FEATURE_PRICE_TRACKING=false

# Enable social features
FEATURE_SOCIAL=false

# Enable public API
FEATURE_PUBLIC_API=false

# Enable premium features
FEATURE_PREMIUM_TIER=false

# Maximum free AI requests per day
FREE_TIER_AI_LIMIT=5

# ----------------------------------------------------------------------------
# Rate Limiting
# ----------------------------------------------------------------------------

# API rate limits (requests per minute)
RATE_LIMIT_AUTHENTICATED=100
RATE_LIMIT_UNAUTHENTICATED=20

# Platform API rate limits (be respectful to external APIs)
STEAM_RATE_LIMIT=200
GOG_RATE_LIMIT=100
EPIC_RATE_LIMIT=100

# ----------------------------------------------------------------------------
# Security & Authentication
# ----------------------------------------------------------------------------

# Session timeout (seconds)
SESSION_TIMEOUT=86400

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Force SSL in production
FORCE_SSL=false

# Cookie encryption key (auto-generated, or specify)
# COOKIE_ENCRYPTION_KEY=

# ----------------------------------------------------------------------------
# Development & Debugging
# ----------------------------------------------------------------------------

# Enable debug mode
DEBUG=false

# Enable verbose logging
VERBOSE=false

# Enable SQL query logging
LOG_QUERIES=false

# Disable AI calls (use mocked responses)
MOCK_AI_RESPONSES=false

# Disable external API calls (use cached/mocked responses)
MOCK_PLATFORM_APIS=false

# ----------------------------------------------------------------------------
# Testing
# ----------------------------------------------------------------------------

# Test environment settings (when RAILS_ENV=test)
# Most inherit from development, but can override:
# TEST_AI_PROVIDER=mock

# ----------------------------------------------------------------------------
# Analytics (Future)
# ----------------------------------------------------------------------------

# Google Analytics
# GA_TRACKING_ID=

# Plausible Analytics (privacy-friendly alternative)
# PLAUSIBLE_DOMAIN=

# ----------------------------------------------------------------------------
# Payment Processing (Future)
# ----------------------------------------------------------------------------

# Stripe (for premium subscriptions)
# STRIPE_PUBLISHABLE_KEY=
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=

# ----------------------------------------------------------------------------
# Notes
# ----------------------------------------------------------------------------
# 
# Minimal Setup (to get started):
#   - DATABASE_URL
#   - STEAM_API_KEY
#   - OPENAI_API_KEY or ANTHROPIC_API_KEY
#
# Recommended for Development:
#   - All of minimal setup
#   - REDIS_URL
#   - IGDB_CLIENT_ID + IGDB_CLIENT_SECRET
#
# Production Requirements:
#   - All database credentials
#   - All enabled platform API keys
#   - AI provider keys
#   - REDIS_URL
#   - S3 or equivalent storage
#   - Sentry or error tracking
#   - Email provider
#
# ============================================================================
